<section class="container" id="shared-trips-page">
    <header class="trip">
        <h1>Welcome!</h1>
        <p class="lead">In this category you will find all initiatives that will help nature and the natural way of life.</p>
        <p class="lead">Join or create your own initative!</p>
    </header>
    <div class="row text-center">
        <!-- If there are shared trips in the database display each of them -->
        {{#each allEnvironment}}
        <!-- This is the name of the passed context !!! -->
        {{> init}}
        <!-- This is the name of the partial !!! -->
        {{else}}
        <!-- If there are no shared trips in the database -->
        <div class="no-trips">
            <p class="lead">No initiatives in this category.</p>
        </div>
        {{/each}}
    </div>
</section>