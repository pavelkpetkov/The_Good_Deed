<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
        <img class="card-img-top" src="{{img}}" alt="Image">
        <div class="card-body">
            <h5 class="card-title"><i></i> <span>{{title}}</span>
            </h5>
            <h5 class="mt-4 card-info"><i class="far fa-calendar-alt"></i> Date: <span>{{date}}</span>
            </h5>
            <h5 class="mt-4 card-info"><i class="far fa-clock"></i> Time: <span>{{time}}</span></h5>
            <h5 class="mt-4"><i class="fas fa-map-marker-alt"></i> Location: <span>{{location}}</span></h5>
        </div>
        <div class="card-footer">
            <a href="/data/details/{{_id}}" class="btn btn-primary">Details</a>
        </div>
            <span class="likes">{{usersLiked.length}} Likes</span>
    </div>
</div>